<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.raj.sharephoto.ui.profile.ProfileViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.profile.ProfileFragment">

        <ImageView
                android:id="@+id/profile_image"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_profile_add_pic"
               />

        <TextView
                android:id="@+id/num_posts"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/profile_image"
                android:layout_width="wrap_content"
                android:text="10 Posts"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"/>


        <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_profile"
                app:layout_constraintTop_toBottomOf="@id/num_posts"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="Edit Profile"
                android:onClick="@{() -> viewModel.navigateEdit()}"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                android:layout_marginStart="40dp"/>

        <TextView
                android:id="@+id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                style="@style/AppTheme.Body1"
                android:layout_marginLeft="16dp"
                android:text="@{viewModel.name}"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tagline"
                style="@style/AppTheme.Body1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:text="@{viewModel.tagline}"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/my_post"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tagline"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:text="My Posts"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_post_grid"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_post"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
        >
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>