<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
<variable name="viewModel" type="com.raj.sharephoto.ui.profile.edit.EditProfileViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.profile.edit.EditProfileActivity">

        <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:onClick="@{()->viewModel.onClose()}"
                android:src="@drawable/ic_close"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintLeft_toRightOf="@id/close"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Edit Profile"
                android:layout_marginTop="12dp"
                style="@style/AppTheme.Body1"
                android:layout_height="wrap_content"/>


        <ImageView
                android:id="@+id/tick"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:onClick="@{()->viewModel.onUpdate()}"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_tick"
                android:layout_height="wrap_content"/>


        <ImageView
                android:id="@+id/profilePic"
                android:layout_width="80dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/close"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:onClick="@{()->viewModel.onProfilePhotoChange()}"
                android:src="@drawable/ic_profile_add_pic"
                android:layout_height="80dp"/>


        <TextView
                android:id="@+id/profilePicTxt"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePic"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Subtitle1"
                android:text="Change Photo"
                android:onClick="@{()->viewModel.onProfilePhotoChange()}"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePicTxt"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Caption"
                android:text="Name"
                android:layout_height="wrap_content"/>


        <EditText
                android:id="@+id/name_edit_txt"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Body1"
                android:hint="Bio"
                android:text="@={viewModel.nameField}"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_edit_txt"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Caption"
                android:text="Bio"
                android:layout_height="wrap_content"/>


        <EditText
                android:id="@+id/bio_edit_txt"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bio"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Body1"
                android:hint="Bio"
                android:text="@={viewModel.taglineField}"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/private_info"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bio_edit_txt"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Body1"
                android:text="Private Info"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/private_info"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Caption"
                android:text="Email Address:"
                android:layout_height="wrap_content"/>



        <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_txt"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Body2"
                android:text="Private Info"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>